{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["ES2021"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "*": ["./@mf-types/*"],
			"@typings": ["typings.ts"],
			"@helpers/*": ["helpers/*"],
      "appsettings": ["../appsettings/dist/index.d.ts"]
    }
  },
  "include": ["src"],
}
